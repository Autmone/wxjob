
.page{
  margin:20px 5px;
}

.story_title{
    line-height: 24px;
    font-size: 16px;
}
.story_author{
    line-height: 24px;
    font-size: 12px;
    padding-bottom: 5px;
    border-bottom: solid 1px #CCC;
    margin: 10px auto;
}
.story_author ol{
    margin-left: 20px;
}
.story_summary{
    font-family: '宋体';
    margin: 20px 10px;
    float: none;
    line-height: 26px;
    font-size: 14px;
    border-bottom: solid 1px #CCC;
}
.story_content{
    font-family: '微软雅黑';
    margin: 20px 10px;
    line-height: 26px;
    font-size: 16px;
}

.comment_banner{
  border-bottom:2px solid #CCC;
  border-left:2px solid #CCC;
  padding-left: 5px;
  padding-bottom: 5px;
}
.story_comment{
  border-top: 1px solid #CCC;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 55px;
}
.comment_title{
  margin-top:5px;
  font-size: 14px;
  font-family: '微软雅黑';
}
.comment_title li{
  margin-right: 15px;
}
.comment_content{
  font-size: 12px;
  font-family: '微软雅黑';
  margin: 10px auto;
  width: 100%;
  border-bottom: 1px solid #CCC;
  padding-bottom: 5px;
}

.your_comment{
  z-index: 99;
  position: fixed;
  bottom:0px;
  left:0px;
  background-color: #FFF;
  width: 100%;
  height:40px;
  border-top: 1px solid #CCC;
}
.your_comment textarea{
  height:36px;
  margin:2px 5px;
  font-size:14px;
  width:100%;
}
.input_placeholder{
  font-size:16px;
}